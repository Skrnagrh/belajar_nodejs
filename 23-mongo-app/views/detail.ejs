<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        data contact tidak ada. <br />
        <a href="/contact" class="alert-link fw-normal"
          >&laquo; kembali ke daftar kontak</a
        >.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.nohp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge"
            >Edit</a
          >
          <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('apakah kamu yakin ingin menghapus data ini?')">Delete</a> -->
          <form action="/contact?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="nama" value="<%= contact.nama %>">
            <button type="submit" class="btn btn-danger badge" onclick="return confirm('apakah kamu yakin ingin menghapus data ini?')">Delete</button>
          </form>

          <a href="/contact" class="card-link d-block mt-3"
            >kembali ke daftar contact</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
