<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h1>Daftar Contact</h1>

      <a href="/contact/add/" class="btn btn-primary mb-2"
        >Tambah Data Contact</a
      >
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col"><Cc:ie></Cc:ie>ontact</th>
            <th scope="col">No. Handphone</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data contact masih kosong.
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="badge bg-success text-decoration-none"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
